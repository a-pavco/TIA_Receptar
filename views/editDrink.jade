extends layout

block content
	//ul
		each error in errors
			li.alert.alert-danger= error.msg
	h2 Edituj recept
	form(method='post', action='/editDrink/#{row.id}', enctype="multipart/form-data")
		.form-group
			label Názov
				input.form-control(type='text', name='name', value='#{row.name}')
		.form-group
			label Popis
				textarea.form-control(type='textarea', name='description', value='#{row.description}')
		.form-group
			label Obrázok
				input.form-control(type='file', name='imgpath', value='#{row.img_path}')
		button.btn.btn-default(type='submit') Edituj

